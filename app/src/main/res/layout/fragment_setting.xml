<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/lightgray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:background="@drawable/background_radius_bottom" >
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="81sp"
                android:layout_marginHorizontal="20sp"
                android:elevation="10sp"
                android:background="@drawable/background_border_white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_gravity="center"
                    android:id="@+id/imgProfile"
                    android:src="@mipmap/ic_launcher"

                    android:layout_marginVertical="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:paddingLeft="25dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:id="@+id/etName"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:paddingLeft="25dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    android:layout_marginHorizontal="20dp"
                    android:id="@+id/etPhone"
                    android:layout_marginVertical="10sp"
                    android:inputType="phone"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:paddingLeft="25dp"/>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10sp"
                    android:id="@+id/rgGenderInSetting"
                    android:layout_marginBottom="20sp"
                    android:layout_marginLeft="30dp">
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbMaleInSetting"
                        android:text="Male"
                        />
                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rbFemaleInSetting"
                        android:layout_marginLeft="15dp"
                        android:text="Female"/>
                </RadioGroup>
            </LinearLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginVertical="30sp"
                android:elevation="10sp"
                android:background="@drawable/button_signout"
                android:id="@+id/btSignOut"/>

        </LinearLayout>
    </ScrollView>




</AbsoluteLayout>